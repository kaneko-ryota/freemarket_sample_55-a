=render 'shared/registration_header'
- breadcrumb :credit
.pan
  = breadcrumbs pretext: "",separator: " &rsaquo; "
.main-credit
  .credit-contents
    %h2.credit-contents__head
      クレジットカード情報入力
    = form_for(@credit, url: credits_path, method: :post, html:{id:"charge-form",class:"credit-contents__form form"}) do |f|
      .credit-contents__form-inner
        .credit-contents__form-inner--group
          %label
            カード番号
            %span.require
              必須
          %input{type:"text",class:"text-form",id:"payment_card_no",placeholder:"半角数字のみ",maxlength:"16",name:"number"}
          %ul
          %ul.credit-contents__form-inner--group--card-group
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3135490372",width:"49",height:"20"}
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3135490372",width:"34",height:"20"}
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3135490372",width:"30",height:"20"}
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3135490372",width:"32",height:"20"}
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3135490372",width:"21",height:"20"}
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3135490372",width:"32",height:"20"}
            %li.card-list
              %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3135490372",width:"32",height:"20"}
        .credit-contents__form-inner--group
          %label
            有効期限
            %span.require
              必須
          %br
          .credit-contents__form-inner--group--select-wrap
            %select#exp_month.credit-contents__form-inner--group--select-wrap--box{name:"exp_month",type:"text"}
              %option{value:"1"}01
              %option{value:"2"}02
              %option{value:"3"}03
              %option{value:"4"}04
              %option{value:"5"}05
              %option{value:"6"}06
              %option{value:"7"}07
              %option{value:"8"}08
              %option{value:"9",selected:"selected"}09
              %option{value:"10"}10
              %option{value:"11"}11
              %option{value:"12"}12
            %span 月
          .credit-contents__form-inner--group--select-wrap
            %select#exp_year.credit-contents__form-inner--group--select-wrap--box{name:"exp_year",type:"text"}
              %option{value:"2019"}19
              %option{value:"2020"}20
              %option{value:"2021"}21
              %option{value:"2022",selected:"selected"}22
              %option{value:"2023"}23
              %option{value:"2024"}24
              %option{value:"2025"}25
              %option{value:"2026"}26
              %option{value:"2027"}27
              %option{value:"2028"}28
              %option{value:"2029"}29
            %span 年
        .credit-contents__form-inner--group
          %label
            セキュリティコード
            %span.require
              必須
          %input#cvc_code.text-form.cvc{type:"text",placeholder:"カード背面4桁もしくは3桁の番号",name:"cvc",maxlength:"4"}
          .credit-contents__form-inner--group--seqcode-text
            %span.question ?
            コードの裏面の番号とは？
        %button#submit-button{type:"submit"}追加する
=render 'shared/registration_footer'