%header.header
  .inner
    .inner__top
      = link_to root_path do
        %h1
          %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966"}
      %form.header-form
        %input{placeholder: '何かお探しですか?', class: 'input-default'}
        %i.fa.fa-search
    .inner__nav-box
      %nav.inner__nav-box--left
        %ul
          %li
            %h2
              = link_to "#" do
                = fa_icon "list-ul"
                %span カテゴリーから探す
          %li
            %h2
              = link_to "#" do
                = fa_icon "tag"
                %span ブランドから探す
      .inner__nav-box--right
        - if user_signed_in?
          %ul
            %li
              = link_to "#" do
                %i.far.fa-bell
                %span お知らせ
            %li
              = link_to "#" do
                = fa_icon "check"
                %span やることリスト
            %li
              = link_to "users/show" do
                = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", class: 'profile_icon'
                %span マイページ
        - else
          %ul
            %li
              = link_to "新規会員登録", new_registration_user_registrations_path
            %li
              = link_to "ログイン", new_user_session_path