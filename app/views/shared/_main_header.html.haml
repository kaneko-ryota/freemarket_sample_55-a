%header.header
  .inner
    .inner__top
      = link_to root_path do
        %h1
          %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966"}
      = search_form_for(@q, url: "/products/search",html:{class:"header-form"})  do |f|
        = f.search_field :name_or_explain_or_item_status_or_size_cont ,placeholder: "何かお探しですか？"
        %i.fa.fa-search
          = f.submit "",class:"wer"
    .inner__nav-box
      %nav.inner__nav-box--left
        %ul
          %li
            %h2.inner__nav-box--left--category
              = link_to "#" do
                = fa_icon "list-ul"
                %span カテゴリーから探す
          %li
            %h2.inner__nav-box--left--brand
              = link_to "#" do
                = fa_icon "tag"
                %span ブランドから探す
      .inner__nav-box--right
        - if user_signed_in?
          %ul
            %li
              = link_to "#" do
                %i.far.fa-bell
                %span お知らせ
            %li
              = link_to "#" do
                = fa_icon "check"
                %span やることリスト
            %li
              = link_to user_path(current_user) do
                = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", class: 'profile_icon'
                %span マイページ
        - else
          %ul
            %li.signup-btn
              = link_to "新規会員登録", top_signup_index_path
            %li.login-btn
              = link_to "ログイン", new_user_session_path

      .category-navigation
        .category-navigation__bar
          - Category.all.each do |category|
            = link_to "#" do
              .category-navigation__bar__list
                = category.name
        .category-navigation__bar
          = link_to "#" do
            .category-navigation__bar__list
              カテゴリー一覧

      .brand-navigation
        .brand-navigation__bar
          - Brand.all.each do |brand|
            = link_to "#" do
              .brand-navigation__bar__list
                =brand.name
        .brand-navigation__bar
          = link_to "#" do
            .brand-navigation__bar__list
              ブランド一覧
