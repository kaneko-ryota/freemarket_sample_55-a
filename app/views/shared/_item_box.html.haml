%section.item-box
  %figure.item-box__photo
    - product.product_images.each_with_index do |image, index|
      - if index == 0
        = image_tag("#{image.image.url}")
    %figcaption
      - if product.trade_status == 2 || product.trade_status == 3
        .item-sold-out-badge
          .sold-label
            SOLD
  .item-box__body
    %h3.item-box__body--name
      = product.name
    .item-box__body--num
      .price
        Â¥
        = product.price.to_s(:delimited)
      .add-heart
        %i.far.fa-heart
        %span 12