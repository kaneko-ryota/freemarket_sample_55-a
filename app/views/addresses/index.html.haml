= render "shared/main_header"
= render "shared/flash_message"
.address-info-edit
  = render "shared/main_sidebar"
  .address-info-edit__body
    .address-info-edit__body__title
      発送元・お届け先住所入力

    = form_for @address, html:{class: "address-info-edit__body__main"} do |f|
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text お名前
        %span.address-info-edit__body__main__input__mark 必須
        = f.text_field :name_last, placeholder: "メルカリ", class: "address-info-edit__body__main__input__box"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:name_last).each do |message|
            %li.error-message= message
        = f.text_field :name_first, placeholder: "太郎", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:name_first).each do |message|
            %li.error-message= message
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text お名前カナ
        %span.address-info-edit__body__main__input__mark 必須
        = f.text_field :name_kana_last, placeholder: "メルカリ", class: "address-info-edit__body__main__input__box"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:name_kana_last).each do |message|
            %li.error-message= message
        = f.text_field :name_kana_first, placeholder: "タロウ", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:name_kana_first).each do |message|
            %li.error-message= message
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text 郵便番号
        %span.address-info-edit__body__main__input__mark 必須
        = f.text_field :postal_code, placeholder: "例)123-4567", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:postal_code).each do |message|
            %li.error-message= message
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text 都道府県
        %span.address-info-edit__body__main__input__mark 必須
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        - if @address.errors.any?
          - @address.errors.full_messages_for(:prefecture_id).each do |message|
            %li.error-message= message

      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text 市区町村
        %span.address-info-edit__body__main__input__mark 必須
        = f.text_field :city, placeholder: "例)横浜市緑区", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:city).each do |message|
            %li.error-message= message
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text 番地
        %span.address-info-edit__body__main__input__mark 必須
        = f.text_field :house_number, placeholder: "例)青山1-1-1", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:house_number).each do |message|
            %li.error-message= message
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text 建物名
        %span.address-info-edit__body__main__input__mark-any 任意
        = f.text_field :building_name, placeholder: "例)柳ビル103", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:building_name).each do |message|
            %li.error-message= message
      .address-info-edit__body__main__input
        %span.address-info-edit__body__main__input__text 電話
        %span.address-info-edit__body__main__input__mark-any 任意
        = f.text_field :phone_number, placeholder: "例)09012345678", class: "address-info-edit__body__main__input__box-2"
        - if @address.errors.any?
          - @address.errors.full_messages_for(:phone_number).each do |message|
            %li.error-message= message
        = f.submit "変更する", class: "address-info-edit__body__main__next-btn"
= render "shared/main_footer"